#!/usr/bin/env ruby

# ------------------------------------------------
# TRAPS ------------------------------------------
# ------------------------------------------------
trap "SIGINT" do
  exit 130
end

trap "KILL" do
  exit 143
end

# ------------------------------------------------
# MAIN -------------------------------------------
# ------------------------------------------------
begin
  require "notify-push"
rescue LoadError
  require "rubygems"
  require "notify-push"
end

exit NotifyPush.main

